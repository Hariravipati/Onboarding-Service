                        {
                            "name": "accountType",
                            "label": "Account Type",
                            "type": "select",
                            "required": true,
                            "options": [
                                {
                                    "id": "SAVINGS",
                                    "value": "Savings Account"
                                },
                                {
                                    "id": "CURRENT",
                                    "value": "Current Account"
                                },
                                {
                                    "id": "SALARY",
                                    "value": "Salary Account"
                                }
                            ]
                        }
                    ]
                }
            ]
        },
