{
    "title": "Employee Onboarding",
    "description": "Please complete the sections below.",
    "layout": "vertical",
    "tabs": [
        // Tab 1: Employee KYC - Basic identity verification fields (Aadhar, Mobile, PAN)
        {
            "id": "tab_1",
            "label": "Employee KYC",
            "icon": "FileText",
            "fields": [
                {
                    "name": "aadhar_no",
                    "label": "Enter your Aadhar Number",
                    "type": "text",
                    "required": true,
                    "regex": "\\d{12}"
                },
                {
                    "name": "mobile_no",
                    "label": "Enter your Mobile Number",
                    "type": "text",
                    "required": true,
                    "regex": "\\d{10}"
                },
                {
                    "name": "pan",
                    "label": "Enter your PAN Number",
                    "type": "text",
                    "required": true,
                    "regex": "[A-Z]{5}[0-9]{4}[A-Z]{1}"
                }
            ]
        },
        // Tab 2: Personal & Contact Details - Personal info, contact details, and address information
        {
            "id": "tab_2",
            "label": "Personal & Contact Details",
            "icon": "User",
            "groups": [
                {
                    "id": "grp_personal",
                    "label": "Personal Information",
                    "fields": [
                        {
                            "name": "full_name",
                            "label": "Name as per Aadhaar",
                            "type": "text",
                            "required": true
                        },
                        {
                            "name": "dob",
                            "label": "DOB as per Aadhaar",
                            "type": "date",
                            "required": true
                        },
                        {
                            "name": "gender",
                            "label": "Gender",
                            "type": "select",
                            "required": true,
                            "options": [
                                {
                                    "id": "M",
                                    "value": "Male"
                                },
                                {
                                    "id": "F",
                                    "value": "Female"
                                },
                                {
                                    "id": "O",
                                    "value": "Others"
                                }
                            ]
                        },
                        {
                            "name": "blood_group",
                            "label": "Blood Group",
                            "type": "select",
                            "required": true,
                            "options": [
                                {
                                    "id": "A+",
                                    "value": "A+"
                                },
                                {
                                    "id": "A-",
                                    "value": "A-"
                                },
                                {
                                    "id": "B+",
                                    "value": "B+"
                                },
                                {
                                    "id": "B-",
                                    "value": "B-"
                                },
                                {
                                    "id": "O+",
                                    "value": "O+"
                                },
                                {
                                    "id": "O-",
                                    "value": "O-"
                                },
                                {
                                    "id": "AB+",
                                    "value": "AB+"
                                },
                                {
                                    "id": "AB-",
                                    "value": "AB-"
                                }
                            ]
                        }
                    ]
                },
                {
                    "id": "grp_contact",
                    "label": "Contact Information",
                    "fields": [
                        {
                            "name": "personal_email",
                            "label": "Personal Email",
                            "type": "email",
                            "required": true
                        },
                        {
                            "name": "alternate_mobile",
                            "label": "Alternate Mobile Number",
                            "type": "text",
                            "regex": "\\d{10}"
                        },
                        {
                            "name": "emergency_contact_name",
                            "label": "Emergency Contact Name",
                            "type": "text",
                            "required": true
                        },
                        {
                            "name": "emergency_contact_number",
                            "label": "Emergency Contact Number",
                            "type": "text",
                            "required": true,
                            "regex": "\\d{10}"
                        },
                        {
                            "name": "emergency_relationship",
                            "label": "Relationship",
                            "type": "select",
                            "options": [
                                {
                                    "id": "SPOUSE",
                                    "value": "Spouse"
                                },
                                {
                                    "id": "PARENT",
                                    "value": "Parent"
                                },
                                {
                                    "id": "SIBLING",
                                    "value": "Sibling"
                                },
                                {
                                    "id": "FRIEND",
                                    "value": "Friend"
                                }
                            ]
                        }
                    ]
                },
                {
                    "id": "grp_address",
                    "label": "Address Information",
                    "fields": [
                        {
                            "name": "present_address_line1",
                            "label": "Present Address Line 1",
                            "type": "text",
                            "required": true
                        },
                        {
                            "name": "present_city",
                            "label": "Present City",
                            "type": "text",
                            "required": true
                        },
                        {
                            "name": "present_state",
                            "label": "Present State",
                            "type": "text",
                            "required": true
                        },
                        {
                            "name": "present_pincode",
                            "label": "Present Pincode",
                            "type": "text",
                            "required": true,
                            "regex": "\\d{6}"
                        },
                        {
                            "name": "same_as_present",
                            "label": "Permanent Address same as Present",
                            "type": "checkbox"
                        },
                        {
                            "name": "permanent_address_line1",
                            "label": "Permanent Address Line 1",
                            "type": "text",
                            "requiredIf": {
                                "field": "same_as_present",
                                "value": false
                            }
                        },
                        {
                            "name": "permanent_city",
                            "label": "Permanent City",
                            "type": "text",
                            "requiredIf": {
                                "field": "same_as_present",
                                "value": false
                            }
                        },
                        {
                            "name": "permanent_state",
                            "label": "Permanent State",
                            "type": "text",
                            "requiredIf": {
                                "field": "same_as_present",
                                "value": false
                            }
                        },
                        {
                            "name": "permanent_pincode",
                            "label": "Permanent Pincode",
                            "type": "text",
                            "regex": "\\d{6}",
                            "requiredIf": {
                                "field": "same_as_present",
                                "value": false
                            }
                        }
                    ]
                }
            ]
        },
        // Tab 3: Education Details - Dynamic education qualification management
        {
            "id": "tab_3",
            "label": "Education Details",
            "icon": "GraduationCap",
            "sections": [
                {
                    "id": "highest_qualification_section",
                    "title": "Highest Qualification",
                    "fields": [
                        {
                            "name": "highest_qualification",
                            "type": "select",
                            "label": "Highest Qualification",
                            "required": true,
                            "validation": {
                                "required": "Please select your highest qualification"
                            },
                            "responsive": {
                                "className": "col-12"
                            },
                            "options": {
                                "source": "qualifications_master",
                                "valueField": "code",
                                "labelField": "name"
                            },
                            "triggers": [
                                {
                                    "event": "onChange",
                                    "action": "updateDynamicSection",
                                    "target": "education_details_section",
                                    "rules": {
                                        "minRows": {
                                            "condition": "value >= 5",
                                            "value": 2,
                                            "default": 1
                                        },
                                        "allowedQualifications": {
                                            "filter": "q.code <= value"
                                        }
                                    }
                                }
                            ]
                        }
                    ]
                },
                {
                    "id": "education_details_section",
                    "title": "Education Details",
                    "type": "dynamic_repeater",
                    "dependsOn": "highest_qualification",
                    "minRows": 1,
                    "maxRows": 10,
                    "addButtonText": "+ Add Qualification",
                    "removeButtonText": "Remove",
                    "responsive": {
                        "container": "mb-4",
                        "row": "border rounded p-3 mb-3 bg-light"
                    },
                    "fields": [
                        {
                            "name": "qualification_code",
                            "type": "select",
                            "label": "Qualification",
                            "required": true,
                            "responsive": {
                                "className": "col-12 col-md-6"
                            },
                            "options": {
                                "source": "filtered_qualifications",
                                "valueField": "code",
                                "labelField": "name"
                            },
                            "validation": {
                                "required": "Please select qualification"
                            }
                        },
                        {
                            "name": "degree_name",
                            "type": "text",
                            "label": "Degree / Course Name",
                            "placeholder": "e.g., Bachelor of Engineering",
                            "required": true,
                            "responsive": {
                                "className": "col-12 col-md-6"
                            },
                            "validation": {
                                "required": "Please enter degree name",
                                "minLength": 2
                            }
                        },
                        {
                            "name": "institution_name",
                            "type": "text",
                            "label": "Institution Name",
                            "placeholder": "e.g., ABC University",
                            "required": true,
                            "responsive": {
                                "className": "col-12 col-md-6"
                            },
                            "validation": {
                                "required": "Please enter institution name",
                                "minLength": 2
                            }
                        },
                        {
                            "name": "year_of_passing",
                            "type": "number",
                            "label": "Year of Passing",
                            "placeholder": "YYYY",
                            "required": true,
                            "responsive": {
                                "className": "col-12 col-md-6"
                            },
                            "validation": {
                                "required": "Please enter year of passing",
                                "min": 1950,
                                "max": 2030
                            }
                        },
                        {
                            "name": "percentage_cgpa",
                            "type": "text",
                            "label": "Percentage / CGPA",
                            "placeholder": "e.g., 85% or 8.5 CGPA",
                            "responsive": {
                                "className": "col-12 col-md-6"
                            }
                        },
                        {
                            "name": "mode_of_study",
                            "type": "select",
                            "label": "Mode of Study",
                            "required": true,
                            "responsive": {
                                "className": "col-12 col-md-6"
                            },
                            "options": {
                                "static": [
                                    {
                                        "value": "REG",
                                        "label": "Regular"
                                    },
                                    {
                                        "value": "DIS",
                                        "label": "Distance"
                                    },
                                    {
                                        "value": "ONL",
                                        "label": "Online"
                                    },
                                    {
                                        "value": "COR",
                                        "label": "Correspondence"
                                    }
                                ]
                            },
                            "defaultValue": "REG"
                        },
                        {
                            "name": "is_highest",
                            "type": "checkbox",
                            "label": "Is this your highest qualification?",
                            "responsive": {
                                "className": "col-12"
                            },
                            "validation": {
                                "custom": "exactlyOneHighest"
                            }
                        }
                    ]
                }
            ],
            "actions": [
                {
                    "id": "submit",
                    "type": "submit",
                    "label": "Submit Education Details",
                    "className": "btn btn-primary me-2",
                    "validation": {
                        "validateAll": true,
                        "customRules": [
                            "exactlyOneHighest",
                            "highestQualificationPresent"
                        ]
                    }
                },
                {
                    "id": "save_draft",
                    "type": "button",
                    "label": "Save as Draft",
                    "className": "btn btn-outline-secondary",
                    "action": "saveDraft"
                }
            ]
        },
        // Tab 4: Bank Details - Banking information for salary processing
        {
            "id": "tab_4",
            "label": "Bank Details",
            "icon": "Landmark",
            "groups": [
                {
                    "id": "grp_bank",
                    "label": "Bank Account Information",
                    "fields": [
                        {
                            "name": "accountHolderName",
